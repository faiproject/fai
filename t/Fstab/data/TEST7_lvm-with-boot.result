@fstab = (
           '# /etc/fstab: static file system information.',
           '#',
           '# <file sys>	<mount point>	<type>	<options>	<dump>	<pass>',
           '/dev/my_vg/root	/	ext4	rw,errors=remount-ro	0	1',
           '/dev/sda1	/boot	ext4	rw	0	2',
           '/dev/my_vg/home	/home	ext4	rw	0	2',
           '/dev/my_vg/tmp	/tmp	ext4	rw,nosuid	0	2',
           '/dev/my_vg/varlog	/var/log	ext4	rw	0	2',
           '/dev/sda2	none	swap	rw	0	0'
         );
@disk_var = (
              'BOOT_DEVICE=${BOOT_DEVICE:-"/dev/sda"}',
              'BOOT_PARTITION=${BOOT_PARTITION:-/dev/sda1}',
              'ROOT_PARTITION=${ROOT_PARTITION:-/dev/my_vg/root}',
              'SWAPLIST=${SWAPLIST:-"/dev/sda2"}',
            );
